[ -z "${UI_PORT}" ] && UI_PORT=5380
[ -z "${UI_USER}" ] && UI_USER=test
[ -z "${UI_PASS}" ] && UI_PASS=test

#OPTS_STOP=--rm
OPTS_STOP=--restart always 

cat <<"EOM"
UI login: http://localhost:${UI_PORT}
Username: [${UI_USER}]
Password: [${UI_PASS}]
EOM

docker run \
  --name dnsmasq \
  -d ${OPTS_STOP} \
  -p 53:53/udp \
  -p ${UI_PORT}:8080 \
  -v ${PWD}/data/etc/dnsmasq.conf:/etc/dnsmasq.conf \
  --log-opt "max-size=100m" \
  -e "HTTP_USER=${UI_USER}" \
  -e "HTTP_PASS=${UI_PASS}" \
  jpillora/dnsmasq
